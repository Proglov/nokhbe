generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  tags String[]
  telegram Boolean @default(false)
  views Int @default(0)
  status Boolean @default(false)
  imageURL String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Announcements {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  tags String[]
  telegram Boolean @default(false)
  views Int @default(0)
  status Boolean @default(false)
  imageURL String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Events {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  tags String[]
  telegram Boolean @default(false)
  views Int @default(0)
  status Boolean @default(false)
  imageURL String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NormalUser{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  password String
  role String @default("000101")
  joinedAt DateTime @default(now())
}