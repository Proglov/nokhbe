generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        String[]
  telegram    Boolean  @default(false)
  views       Int      @default(0)
  status      Boolean  @default(false)
  imagesURL   String[]
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Announcements {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        String[]
  telegram    Boolean  @default(false)
  views       Int      @default(0)
  status      Boolean  @default(false)
  imagesURL   String[]
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Events {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  tags        String[]
  telegram    Boolean  @default(false)
  views       Int      @default(0)
  status      Boolean  @default(false)
  imagesURL   String[]
  createdBy   String
  eventAt     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Roles {
  Admin
  theBoss
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  username     String   @unique
  password     String
  role         Roles?
  fullName     String
  nationalCode String
  mobileNumber String
  phoneNumber  String
  address      String
  postalCode   String
  biography    String
  education    String
  abilities    String
  club         String[]
  joinedAt     DateTime @default(now())
}
